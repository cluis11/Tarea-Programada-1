#include <stdio.h>//incluye la libreria estandar de C
#include <string.h>//incluye una libreria para manejo de strings
 
int main (int argc,char **argv)
{
 	FILE *fp;
 
 	char datos[100];//inicializa las variabes para guardar los datos
	char datos1[100];
	char datos2[100];
	
	//a+ lo valida solo
 	fp = fopen ( "fichero.txt", "a+" );
 	
 	
 	/*Si el archivo no existe lo crea
 	if (!fp)
		fp = fopen ( "fichero.txt", "a+" );*/
 	
 
 	printf("\nIntroduzca el nombre de usuario:");//mensaje para el usuario

	scanf("%s",&datos);//recibe los datos en la memoria
	strcat(datos," ");//añade un espacio para ordenarlos de mejor forma

	printf ("\nIntrouce el ip: " );//mensaje para el usuario

	scanf("%s",&datos1);//recibe los datos en la memoria
	strcat(datos1," ");//añade un espacio para ordenarlos de mejor forma

	printf ("\nIntroduce el puerto: ");//mensaje para el usuario
	
	scanf("%s",&datos2);//recibe los datos en la memoria

	strcat (datos,datos1);//juntar los datos en una sola linea
	strcat (datos,datos2);//junta los datos en una sola linea
	strcat(datos,"\n"); //hace salt de linea en el archivo .txt 
	
 
 	fprintf (fp,datos);//escribe los datos en el archivo txt
 
 	fclose ( fp );//cierra el archivo de texto para evitar errores

	printf ("\n %c",datos);
 
 	return 0;//retorna 0 si todos lso procesos se completaron de forma correcta
}
